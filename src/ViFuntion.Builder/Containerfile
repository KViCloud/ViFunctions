# Stage 1: Build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy the csproj file and restore dependencies
COPY ["ViFunction.Builder/ViFunction.Builder.csproj", "ViFunction.Builder/"]
RUN dotnet restore "ViFunction.Builder/ViFunction.Builder.csproj"

# Copy the remaining source code and build the application
COPY . .
WORKDIR "/src/ViFunction.Builder"
RUN dotnet publish "ViFunction.Builder.csproj" -c Release -o /app/publish

# Stage 2: Final image with buildah
FROM mcr.microsoft.com/dotnet/aspnet:8.0-bullseye-slim AS final

# Install necessary dependencies for buildah
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    buildah \
    fuse-overlayfs && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app
# Copy the application from the build stage to the final stage
COPY --from=build /app/publish .

# Configure the entry point for the application
ENTRYPOINT ["dotnet", "ViFunction.Builder.dll"]