# Use the official .NET image as a base for the final stage
FROM mcr.microsoft.com/dotnet/aspnet:9.0-alpine AS base

# Build stage
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# Copy the csproj and restore as distinct layers
COPY ["ViFunction.EdgeRouter.csproj", "."]
RUN dotnet restore "ViFunction.EdgeRouter.csproj"

# Copy the rest of the application code
COPY . .
RUN dotnet build "ViFunction.EdgeRouter.csproj" -c Release -o /app/build

# Publish stage
FROM build AS publish
RUN dotnet publish "ViFunction.EdgeRouter.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Final stage using a lightweight ASP.NET Core runtime image
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "ViFunction.EdgeRouter.dll"]